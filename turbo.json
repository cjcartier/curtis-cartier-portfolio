{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "//#format-and-lint": { "cache": false },
    "lint": { "dependsOn": ["^//#format-and-lint"] },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": [".env"]
}
